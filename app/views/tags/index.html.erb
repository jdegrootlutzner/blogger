<h1>Blogger</h1>
<h2>All Tags</h2>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag),
      class: 'tag_title'%>
      <span style="margin-left: 20px;"> <%= link_to "X", tag_path(tag), method: :delete ,
data: {confirm: "Are you sure you want to delete this tag? This action cannot be undone."}%> 
</span>
    </li>
  <% end %>
</ul>
<p style="margin-top: 20px;"><%= link_to "<< Back to Articles List", articles_path %>
